@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout";
}
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Đã quên mật khẩu của bạn?</h1>
                                        <p class="mb-4">Hãy nhập đỉa chỉ email của bạn,
                                            và chúng tôi sẽ gửi liên kết để đặt lại mật khẩu của bạn!</p>
                                    </div>
                                    <form class="post" class="user">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Đặt lại mật khẩu</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Tạo tài khoản</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Đã có tài khoản? Đăng nhập</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>





<div class="row">
    <div class="col-md-6">
        <form method="post">
            

            
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
